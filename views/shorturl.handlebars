<div id="short-url">
  <p>Success! Please use this link:</p>
  <a href="" target="_black"><span>{{ shortURL }}</span></a>
</div>
<button id="copy-button" onclick="copy()">Copy</button>

<script>
  function copy() {
    const url = document.querySelector('#short-url a span').innerText
    navigator.clipboard.writeText(url)
    document.execCommand('copy')
    alert('Copied SuccessfullyÔºÅ')
  }
</script>